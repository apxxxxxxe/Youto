//エスケープ (「はろーYAYAわーるど」オリジナルのものを改造して","を加えています)
//さくらスクリプトの中に「]」を記述したい時等に使用
AYATEMPLATE.EscapeText
{
	_r = _argv[0]
	if RE_SEARCH(_r,'[,"\[\]]') {
		'"' + REPLACE(_r,'"','""') + '"'
	}
	else {
		_r
	}
}

